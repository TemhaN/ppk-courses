@page
@model web.Pages.RegisterModel
@{
    ViewData["Title"] = "Подача заявки";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex items-center justify-center bg-white font-inter">
    <main class="w-full max-w-md mx-auto p-6">
        <section class="form-container bg-gray-100 shadow-2xl rounded-2xl p-8 animate-fade-in">
            <div class="flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <h2 class="text-2xl font-bold text-gray-900">Подача заявки</h2>
            </div>
            <form method="post" class="space-y-5">
                <div class="form-group">
                    <label asp-for="User.Username" class="block text-sm font-medium text-gray-600 mb-2">Имя пользователя</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <input asp-for="User.Username" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" placeholder="Введите имя" />
                    </div>
                    <span asp-validation-for="User.Username" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Email" class="block text-sm font-medium text-gray-600 mb-2">Email</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                        </svg>
                        <input asp-for="User.Email" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" placeholder="example@domain.com" />
                    </div>
                    <span asp-validation-for="User.Email" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.FullName" class="block text-sm font-medium text-gray-600 mb-2">ФИО</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <input asp-for="User.FullName" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" placeholder="Иванов Иван Иванович" />
                    </div>
                    <span asp-validation-for="User.FullName" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.GroupId" class="block text-sm font-medium text-gray-600 mb-2">Группа (не обязательно)</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 005.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        <select asp-for="User.GroupId" class="form-select w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300">
                            <option value="">Без группы</option>
                            @foreach (var group in Model.Groups)
                            {
                                <option value="@group.Id">@group.Name</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="User.GroupId" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div class="form-group">
                    <label class="block text-sm font-medium text-gray-600 mb-2">Курс</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24  piles:
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5s3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18s-3.332.477-4.5 1.253"></path>
                        </svg>
                        <select name="CourseId" class="form-select w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" required>
                            <option value="">Выберите курс</option>
                            @foreach (var course in Model.Courses)
                            {
                                <option value="@course.Id">@course.CourseName (@course.Price руб.)</option>
                            }
                        </select>
                    </div>
                    <span class="text-red-500 text-xs mt-1 block">@(ViewData["CourseError"] ?? "")</span>
                </div>
                <div class="form-group">
                    <label asp-for="User.PasswordHash" class="block text-sm font-medium text-gray-600 mb-2">Пароль</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm4 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm-8 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm12-2h-2V7a5 5 0 00-10 0v2H4v10h16V9zm-2 0H6V7a3 3 0 016 0v2z"></path>
                        </svg>
                        <input asp-for="User.PasswordHash" type="password" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" placeholder="Введите пароль" />
                    </div>
                    <span asp-validation-for="User.PasswordHash" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <button type="submit" class="btn-primary w-full bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600 hover:-translate-y-1 active:scale-95 transition-all duration-300 shadow-md">Подать заявку</button>
            </form>
            <p class="text-center text-sm text-gray-600 mt-6">
                Уже есть аккаунт? <a href="/Login" class="text-blue-500 hover:underline">Войти</a>
            </p>
        </section>
    </main>
    @if (Model.ShowPaymentModal)
    {
        var selectedCourseId = TempData["SelectedCourseId"]?.ToString();
        var selectedCourse = Model.Courses.FirstOrDefault(c => c.Id == int.Parse(selectedCourseId ?? "0"));
        var coursePrice = selectedCourse?.Price ?? 0;
        <div id="paymentModal" class="modal show">
            <div class="modal-content bg-gray-100 rounded-2xl p-8 shadow-2xl animate-fade-in">
                <div class="flex items-center mb-4">
                    <svg class="w-6 h-6 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                    </svg>
                    <h3 class="text-xl font-bold text-gray-900">Оплата курса</h3>
                </div>
                <p class="text-gray-600 mb-6">Оплатите курс: @(Model.SelectedCourseName ?? "Неизвестный курс") за @coursePrice руб.</p>
                <form method="post" asp-page-handler="Pay" class="space-y-5">
                    <input type="hidden" name="userId" value="@Model.User?.Id" />
                    <input type="hidden" name="courseId" value="@selectedCourseId" />
                    <div class="form-group">
                        <label class="block text-sm font-medium text-gray-600 mb-2">Номер карты (16 цифр)</label>
                        <div class="relative">
                            <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                            <input type="text" name="cardNumber" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" maxlength="16" pattern="\d{16}" required placeholder="1234 5678 9012 3456" />
                        </div>
                        <span class="text-red-500 text-xs mt-1 block">@(ViewData["PaymentError"] ?? "")</span>
                    </div>
                    <div class="form-group">
                        <label class="block text-sm font-medium text-gray-600 mb-2">Имя на карте</label>
                        <div class="relative">
                            <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <input type="text" name="cardHolder" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" required placeholder="IVAN IVANOV" />
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="form-group">
                            <label class="block text-sm font-medium text-gray-600 mb-2">Срок действия</label>
                            <div class="flex gap-2">
                                <input type="text" name="expiryMonth" class="form-input w-16 pl-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" maxlength="2" pattern="0[1-9]|1[0-2]" placeholder="MM" required />
                                <span class="self-center text-gray-600">/</span>
                                <input type="text" name="expiryYear" class="form-input w-16 pl-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" maxlength="2" pattern="[0-9]{2}" placeholder="YY" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="block text-sm font-medium text-gray-600 mb-2">CVV (3 цифры)</label>
                            <div class="relative">
                                <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm4 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm-8 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm12-2h-2V7a5 5 0 00-10 0v2H4v10h16V9zm-2 0H6V7a3 3 0 016 0v2z"></path>
                                </svg>
                                <input type="text" name="cvv" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" maxlength="3" pattern="\d{3}" required placeholder="123" />
                            </div>
                        </div>
                    </div>
                    <div class="flex justify-end gap-3">
                        <button type="button" onclick="closeModal()" class="bg-gray-600 text-gray-200 py-3 px-6 rounded-lg hover:bg-gray-700 hover:-translate-y-1 active:scale-95 transition-all duration-300">Отмена</button>
                        <button type="submit" class="bg-blue-500 text-white py-3 px-6 rounded-lg hover:bg-blue-600 hover:-translate-y-1 active:scale-95 transition-all duration-300">Оплатить</button>
                    </div>
                </form>
            </div>
        </div>
    }
</body>
</html>

<style>
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
    }

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

        .modal.show {
            display: flex;
        }
</style>

<script>
    function closeModal() {
        document.getElementById('paymentModal').classList.remove('show');
        window.location.href = '/Index';
    }
    window.onload = function () {
    @if (Model.ShowPaymentModal)
    {
        @:document.getElementById('paymentModal').classList.add('show');
    }
        const expiryMonth = document.querySelector('input[name="expiryMonth"]');
        const expiryYear = document.querySelector('input[name="expiryYear"]');
        if (expiryMonth && expiryYear) {
            expiryMonth.addEventListener('input', function () {
                if (this.value.length === 2) {
                    expiryYear.focus();
                }
            });
        }
    };
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}