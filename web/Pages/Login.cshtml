@page
@model web.Pages.LoginModel
@{
    ViewData["Title"] = "Вход";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex items-center justify-center bg-white font-inter">
    <main class="w-full max-w-md mx-auto p-6">
        <section class="form-container bg-white shadow-2xl rounded-2xl p-8 animate-fade-in">
            <div class="flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                </svg>
                <h2 class="text-2xl font-bold text-gray-900">Вход</h2>
            </div>
            <form method="post" class="space-y-5">
                <div class="form-group">
                    <label asp-for="Input.Username" class="block text-sm font-medium text-gray-600 mb-2">Имя пользователя</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <input asp-for="Input.Username" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" placeholder="Введите имя" />
                    </div>
                    <span asp-validation-for="Input.Username" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-600 mb-2">Пароль</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm4 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm-8 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm12-2h-2V7a5 5 0 00-10 0v2H4v10h16V9zm-2 0H6V7a3 3 0 016 0v2z"></path>
                        </svg>
                        <input asp-for="Input.Password" type="password" class="form-input w-full pl-10 pr-4 py-3 rounded-lg bg-gray-200 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-300" placeholder="Введите пароль" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <button type="submit" class="btn-primary w-full bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600 hover:-translate-y-1 active:scale-95 transition-all duration-300 shadow-md">Войти</button>
            </form>
            <p class="text-center text-sm text-gray-600 mt-6">
                Нет аккаунта? <a href="/Register" class="text-blue-500 hover:underline">Зарегистрироваться</a>
            </p>
        </section>
    </main>
</body>
</html>

<style>
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}