@page
@model web.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Смена пароля";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex items-center justify-center bg-white font-inter">
    <main class="w-full max-w-md mx-auto p-6">
        <section class="bg-white shadow-2xl rounded-xl p-8">
            <div class="flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm4 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm-8 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm12-2h-2V7a5 5 0 00-10 0v2H4v10h16V9zm-2 0H6V7a3 3 0 016 0v2z"></path>
                </svg>
                <h2 class="text-2xl font-bold text-gray-900">Смена пароля</h2>
            </div>
            <form method="post" class="space-y-5">
                <div>
                    <label asp-for="OldPassword" class="block text-sm font-medium text-gray-600 mb-2">Старый пароль</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm4 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm-8 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm12-2h-2V7a5 5 0 00-10 0v2H4v10h16V9zm-2 0H6V7a3 3 0 016 0v2z"></path>
                        </svg>
                        <input asp-for="OldPassword" type="password" class="w-full pl-10 pr-4 py-3 rounded-lg bg-gray-100 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="Введите старый пароль" />
                    </div>
                    <span asp-validation-for="OldPassword" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="NewPassword" class="block text-sm font-medium text-gray-600 mb-2">Новый пароль</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm4 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm-8 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm12-2h-2V7a5 5 0 00-10 0v2H4v10h16V9zm-2 0H6V7a3 3 0 016 0v2z"></path>
                        </svg>
                        <input asp-for="NewPassword" type="password" class="w-full pl-10 pr-4 py-3 rounded-lg bg-gray-100 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="Введите новый пароль" />
                    </div>
                    <span asp-validation-for="NewPassword" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-600 mb-2">Подтверждение пароля</label>
                    <div class="relative">
                        <svg class="w-5 h-5 text-gray-500 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm4 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm-8 0c0-1.104-.896-2-2-2s-2 .896-2 2v3h4v-3zm12-2h-2V7a5 5 0 00-10 0v2H4v10h16V9zm-2 0H6V7a3 3 0 016 0v2z"></path>
                        </svg>
                        <input asp-for="ConfirmPassword" type="password" class="w-full pl-10 pr-4 py-3 rounded-lg bg-gray-100 border-0 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="Повторите новый пароль" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <button type="submit" class="w-full bg-blue-500 text-white py-3 rounded-lg shadow-md hover:bg-blue-600 hover:-translate-y-0.5 transition-all duration-300">Сменить пароль</button>
            </form>
        </section>
    </main>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}